<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context="net.blogsv.shop.activity.MainActivity">    <android.support.v4.widget.DrawerLayout        android:id="@+id/drawerlayout"        android:layout_width="match_parent"        android:layout_height="match_parent">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <android.support.v7.widget.Toolbar                android:layout_width="match_parent"                android:layout_height="?attr/actionBarSize"                app:title="G3 Market"                app:titleTextColor="#fff"                android:id="@+id/toolbarmanhinhchinh"                android:background="@drawable/toolbarc">            </android.support.v7.widget.Toolbar>            <ViewFlipper                android:id="@+id/viewlipper"                android:layout_width="match_parent"                android:layout_height="200dp"></ViewFlipper>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="vertical"                android:background="#eef2de">                <TextView                    android:textSize="20sp"                    android:textStyle="bold"                    android:textColor="#d91926"                    android:layout_margin="5dp"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="Sản phẩm mới nhất"/>                <android.support.v7.widget.RecyclerView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:id="@+id/recyclerview">                </android.support.v7.widget.RecyclerView>            </LinearLayout>        </LinearLayout>        <android.support.design.widget.NavigationView            android:layout_width="match_parent"            android:layout_gravity="start"            android:layout_height="match_parent"            android:id="@+id/navigationview">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="vertical"                android:weightSum="10"               >                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="0dp"                    android:layout_weight="3"                    android:background="#B9DD70"                    android:orientation="horizontal"                    android:weightSum="10"                    android:gravity="center">                    <ImageView                        android:id="@+id/imgAvatar"                        android:layout_weight="3"                        android:layout_width="100dp"                        android:layout_height="100dp"                        android:src="@drawable/avatar" />                    <LinearLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:orientation="vertical"                        android:layout_weight="7"                        android:layout_gravity="center"                        android:gravity="center">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_gravity="center"                            android:text="Xin chào!"                            android:textColor="#6113d7"                            android:textSize="18sp"/>                        <TextView                            android:layout_gravity="center"                            android:id="@+id/tvTenTaiKhoan"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="Tên tài khoản"                            android:textStyle="bold"                            android:textSize="20sp"                            android:textColor="#d21232"/>                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginTop="10dp"                            android:textAllCaps="false"                            android:onClick="Chitiettk"                            android:text="Chi tiết tài khoản"                            android:id="@+id/btnChitiettaikhoan"                            android:textColor="#2238ff"/>                    </LinearLayout>                </LinearLayout>                <ListView                    android:layout_weight="7"                    android:layout_width="match_parent"                    android:layout_height="0dp"                    android:id="@+id/listviewmanhinhchinh">                </ListView>            </LinearLayout>        </android.support.design.widget.NavigationView>    </android.support.v4.widget.DrawerLayout></LinearLayout>