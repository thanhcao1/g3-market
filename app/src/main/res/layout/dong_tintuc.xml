<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/dongkhung_baiviet">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvtitletintuc"
        android:text="Tiêu đề tin tức"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1422bf"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imgTintuc"/>
    <TextView
        android:text="Nội dung tin tức"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvcontenttintuc"/>

</LinearLayout>