<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.blogsv.shop.activity.ChiTietTaiKhoanActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarchitietsanpham"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbarc"
        app:title="Thông tin tài khoản"
        app:titleTextColor="#fff">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:id="@+id/imgAvatarTK"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Tên tài khoản:"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Tên tài khoản"
                android:textSize="18sp"
                android:id="@+id/tvAccnameTK"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Email:"
                android:textSize="16dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textSize="16sp"
                android:id="@+id/tvEmailTK"/>
            <ImageButton
                android:onClick="upEmail"
                android:background="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edittv"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Số điện thoại:"
                android:textSize="16dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textSize="16sp"
                android:id="@+id/tvPhoneTK"/>
            <ImageButton
                android:onClick="upPhone"
                android:background="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edittv"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Địa chỉ:"
                android:textSize="16dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textSize="16sp"
                android:id="@+id/tvDiachiTK"/>
            <ImageButton
                android:onClick="upDiachi"
                android:background="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edittv"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Chức vụ:"
                android:textSize="16dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textSize="16sp"
                android:id="@+id/tvChucvuTK"/>

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <Button
            android:layout_marginRight="10dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/update"
            android:id="@+id/btnCapnhatThongtintk"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:textColor="#ffff"
            android:textAllCaps="false"
            android:background="@drawable/button_dep"/>
        <Button
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="#ffff"
            android:background="@drawable/button_dep"
            android:id="@+id/btnClosethongtintk"
            android:drawableLeft="@drawable/close"
            android:paddingLeft="20dp"/>
    </LinearLayout>

</LinearLayout>
